{
  "preprocessing": {
    "midi_to_abc": {
      "input_dir": "data/raw/lmd_matched",
      "output_dir": "data/processed/abc",
      "min_length": 100,
      "max_length": 10000,
      "extract_melody": true,
      "quantize_rhythm": true
    },
    "tokenization": {
      "method": "character_level",
      "vocab_size": 37,
      "sequence_length": 64,
      "stride": 64,
      "special_tokens": []
    },
    "splitting": {
      "train_ratio": 0.98,
      "val_ratio": 0.01,
      "test_ratio": 0.01,
      "seed": 42,
      "split_level": "file"
    }
  },
  "data_paths": {
    "raw_midi": "data/raw/lmd_matched",
    "abc_files": "data/processed/abc",
    "train_data": "data/processed/train.npy",
    "train_1m": "data/processed/train_1m.npy",
    "val_data": "data/processed/val.npy",
    "val_1m": "data/processed/val_1m.npy",
    "test_data": "data/processed/test.npy",
    "vocab": "data/processed/vocab.json",
    "stats": "data/processed/dataset_stats.json"
  }
}
